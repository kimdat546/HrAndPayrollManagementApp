<div class="content-wrapper">
    <!-- Main content -->
    <section class="content mt-4">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="input-group">
                        <input type="search" class="searchbar form-control form-control-lg" placeholder="Enter ID ... "
                            name="searchbar" autocomplete="off" spellcheck="false">
                        <div class="input-group-append">
                            <button id="btn-search" type="submit" class="btn btn-lg btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="gap"></div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <div class="form-group">
                        <select id="shareholder" class="form-control select2" style="width: 100%;">
                            <option></option>
                            <% shareholder.forEach(function (item) { %>
                                <option value="<%- item.Plan_Name %>">
                                    <%- item.Plan_Name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6 col-12 d-inline-flex flex-row justify-content-around align-items-stretch">
                    <button data-action="add" type="button" class="btn btn-block btn-success"
                        style="width: fit-content;" data-toggle="modal" data-target="#popupmana">Add</button>
                    <button data-action="edit" type="button" class="btn btn-block btn-warning"
                        style="width: fit-content;" data-toggle="modal" data-target="#popupmana">Edit</button>
                    <button data-action="delete" type="button" class="btn btn-block btn-danger"
                        style="width: fit-content;" data-toggle="modal" data-target="#popupdelete">Remove</button>
                </div>
            </div>
            <div class="gap"></div>
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="card">
                        <table id="tablemanagement" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Gender</th>
                                    <th>Shareholder Status</th>
                                    <th>Benefits</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% result.forEach(function (item) { %>
                                    <tr>
                                        <td>
                                            <%- item.Employee_ID %>
                                        </td>
                                        <td>
                                            <%- item.First_Name %>
                                        </td>
                                        <td>
                                            <%- item.Last_Name %>
                                        </td>
                                        <td>
                                            <%- item.Address %>
                                        </td>
                                        <td>
                                            <%- item.Email %>
                                        </td>
                                        <td>
                                            <%- item.Phone_Number %>
                                        </td>
                                        <td>
                                            <%- item.Gender %>
                                        </td>
                                        <td>
                                            <%- item.Shareholder_Status %>
                                        </td>
                                        <td>
                                            <%- item.Plan_Name %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Gender</th>
                                    <th>Shareholder Status</th>
                                    <th>Benefits</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <!-- /.row -->
        </div><!-- /.container-fluid -->

        <div class="modal fade" id="popupmana" style="display: none;" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Modal</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" value="">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control" placeholder="Enter First Name" name="firstname">
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" placeholder="Enter Last Name" name="lastname">
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" placeholder="Enter Address" name="address">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" placeholder="Enter Email" name="email">
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" class="form-control" placeholder="Enter Phone" name="phone">
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            <input type="text" class="form-control" placeholder="Enter Gender" name="gender">
                        </div>
                        <div class="form-group">
                            <label>Shareholder Status</label>
                            <input type="text" class="form-control" placeholder="Enter Shareholder Status"
                                name="shareholderstatus">
                        </div>
                        <div class="form-group">
                            <label>Benefits</label>
                            <input type="text" class="form-control" placeholder="Enter Benefits" name="benefits">
                        </div>

                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btnclose btn btn-default" data-dismiss="modal">Close</button>
                        <button action="" type="button" class="btnok btn btn-primary">Save changes</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <div class="modal fade" id="popupdelete" style="display: none;" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Employee</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" value="">
                        <div class="form-group">
                            <label>Are you sure?</label>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btnclose btn btn-default" data-dismiss="modal">Close</button>
                        <button action="" type="button" class="btndelete btn btn-danger">Delete</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </section>
    <!-- /.content -->
</div>